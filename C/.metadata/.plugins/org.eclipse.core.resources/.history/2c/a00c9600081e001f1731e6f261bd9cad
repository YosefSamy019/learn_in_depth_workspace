#include <stdio.h>

#define LEN 10

struct SStudent{
	char name[20];
	int rollNo;
	float marks;
};

void ex_4(){
	struct SStudent s[LEN];

	fflush(stdin);
	fflush(stdout);

	printf("Enter inforamtion of students: \n");

	int i;
	for(i=0;i<LEN;i++){

		printf("For roll number %d \nEnter Name: ",i);
		fflush(stdin);
		fflush(stdout);
		gets(s.name);

		printf("Enter roll number: ");
		fflush(stdin);
		fflush(stdout);
		scanf("%d",&s.rollNo);

		printf("Enter Marks: ");
		fflush(stdin);
		fflush(stdout);
		scanf("%f",&s.marks);

	}

	printf("\Display inforamtion \n");

	for(i=0;i<LEN;i++){
		printf("Information for roll number %d \nName: %s\n",i,s.name);
		printf("Roll: %d\n",s.rollNo);
		printf("Marks: %f\n",s.marks);
	}

}
