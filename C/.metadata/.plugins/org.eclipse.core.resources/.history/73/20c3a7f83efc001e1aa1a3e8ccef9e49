#include <stdio.h>

#define MAX_SI 30

int main(void) {
	char arr[MAX_SI], c;
	int i,freq=0;

	printf("Enter String: ");

	fflush(stdin);
	fflush(stdout);
	gets(arr);

	printf("Enter char to find Freq: ");

	fflush(stdin);
	fflush(stdout);
	scanf("%c", &c);

	for (i = 0; i < MAX_SI && arr[i] != 0; i++) {
		if(arr[i] == c){
			freq++;
		}
	}

	printf("Freq = %d\n",freq);

	return 0;
}
