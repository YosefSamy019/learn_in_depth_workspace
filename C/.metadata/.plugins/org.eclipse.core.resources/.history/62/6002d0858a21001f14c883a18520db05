#include<stdio.h>

void ex_4() {
	int size, i, *ptr;

	printf("Enter Size: ");
	fflush(stdin);
	fflush(stdout);
	scanf("%d", &size);

	int arr[size];

	for (i = 0; i < size; i++) {
		printf("element - %d: ", i + 1);
		fflush(stdin);
		fflush(stdout);
		scanf("%d", arr + i);
	}

	printf("Output in reverse order\n");




}
