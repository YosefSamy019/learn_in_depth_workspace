#include <stdio.h>

#define LEN 10

struct SStudent{
	char name[20];
	int rollNo;
	float marks;
};

void ex_4(){
	struct SStudent s[LEN];

	fflush(stdin);
	fflush(stdout);

	printf("Enter inforamtion of students: \n");

	int i;
	for(i=0;i<LEN;i++){

	printf("Enter Name: ");
	fflush(stdin);
	fflush(stdout);
	gets(s.name);

	printf("Enter roll number: ");
	fflush(stdin);
	fflush(stdout);
	scanf("%d",&s.rollNo);

	printf("Enter Marks: ");
	fflush(stdin);
	fflush(stdout);
	scanf("%f",&s.marks);

	}

	printf("\Display inforamtion \n");

	printf("Name: %s\n",s.name);
	printf("Roll: %d\n",s.rollNo);
	printf("Marks: %f\n",s.marks);

}
