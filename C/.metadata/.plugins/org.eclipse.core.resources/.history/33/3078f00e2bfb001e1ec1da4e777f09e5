#include <stdio.h>

void main() {
	char c,flag = 0;

	printf("Enter an alphapet: ");
	fflush(stdin);
	fflush(stdout);
	scanf("%c", &c);

	flag = (c=='a')||(c=='e')||(c=='i')||(c=='o')||(c=='u')||
			(c=='A')||(c=='E')||(c=='I')||(c=='O')||(c=='U');

	if(flag){
		printf("%c is vowel\n",c);
	}else{
		printf("%c is consonant\n",c);
	}
}

void ex1() {
	int num;

	printf("Enter Number: ");
	fflush(stdin);
	fflush(stdout);
	scanf("%d", &num);

	if ((num & 1) == 0) {
		printf("%d is Even\n", num);
	} else {
		printf("%d is Odd\n", num);
	}

}
